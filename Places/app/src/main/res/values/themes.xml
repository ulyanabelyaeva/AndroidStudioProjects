<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Places" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/main_color2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Places.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Places.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/main_color2</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Places.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="my">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Theme.Places.AppBarOverlay">
        <item name="android:textSize">18sp</item>
    </style>
</resources>